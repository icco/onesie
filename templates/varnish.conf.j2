[Unit]
Description=Varnish HTTP accelerator

[Service]
Type=forking
LimitNOFILE=131072
LimitMEMLOCK=82000
ExecStartPre=/usr/sbin/varnishd -C -f /etc/varnish/onesie.vcl
ExecStart=/usr/sbin/varnishd -a :80 -T localhost:6082 -f /etc/varnish/onesie.vcl -S /etc/varnish/secret -s malloc,1G
ExecReload=/usr/share/varnish/reload-vcl

[Install]
WantedBy=multi-user.target
