{
  "variables": {
    "account_file": "",
    "tag": "local"
  },
  "builders": [{
    "type": "googlecompute",
    "account_file": "{{user `account_file`}}",
    "project_id": "icco-cloud",
    "source_image": "debian-8-jessie-v20161215",
    "ssh_username": "packer",
    "image_family": "onesie",
    "zone": "us-central1-c"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "./",
      "destination": "/opt/"
    },
    {
      "type": "shell",
      "inline": [
        "sudo apt-get update",
        "sudo apt-get upgrade",
        "sudo apt-get install -y ansible build-essential aptitude vim"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible.yml",
      "playbook_dir": "."
    }
  ]
}
